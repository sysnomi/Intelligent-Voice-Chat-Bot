# ══════════════════════════════════════════════
#  Voice AI POC — Environment Configuration
# ══════════════════════════════════════════════

# ── STT Provider ──────────────────────────────
# Options: azure | groq
STT_PROVIDER=azure

AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# (Used when STT_PROVIDER=groq)
# GROQ_API_KEY is shared with LLM section below

# ── LLM Provider ──────────────────────────────
# Options: openai | gemini | groq | azure_openai
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-...

# Google Gemini
GEMINI_API_KEY=AIza...

# Groq (also used for STT if STT_PROVIDER=groq)
GROQ_API_KEY=gsk_...

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Override the model name (optional, provider-specific defaults are used otherwise)
# LLM_MODEL=gpt-4o-mini

# ── TTS Provider ──────────────────────────────
# Options: elevenlabs | kokoro
TTS_PROVIDER=elevenlabs

ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM    # Rachel voice (default)

# Kokoro (self-hosted, no API key needed)
KOKORO_VOICE=af_heart

# ── App Config ────────────────────────────────
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
MAX_SESSIONS=50
SESSION_TIMEOUT_SECONDS=300
